<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.dkkp.controller.ImportDetailController"
           fx:id="main" styleClass="productAP">
  <VBox spacing="10">
    <MFXButton fx:id="bckBtn" buttonType="RAISED" mnemonicParsing="false" text="Back" prefWidth="70" styleClass="Btn"/>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <VBox spacing="10" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <StackPane maxWidth="200" styleClass="Btn">
<!--          <ImageView fitWidth="200" fitHeight="200" preserveRatio="true">-->
<!--            <Image url="@../../../../../../../DKKP/src/main/resources/com/example/dkkp/DKKP.png"/>-->
<!--          </ImageView>-->
        </StackPane>
      </VBox>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXButton buttonType="RAISED" mnemonicParsing="false" text="Image" styleClass="Btn"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="ID FINAL PRODUCT" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="ID BASE PRODUCT" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="NAME PRODUCT" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="QUANTITY" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="DESCRIPTION" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="PRICE" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox spacing="5">
      <VBox.margin>
        <Insets left="90"/>
      </VBox.margin>
      <MFXTextField floatingText="DISCOUNT" value="0" floatMode="BORDER" prefWidth="200"/>
    </HBox>
    <HBox alignment="CENTER">
      <MFXButton buttonType="RAISED" mnemonicParsing="false" text="Update" styleClass="Btn"/>
    </HBox>
  </VBox>
</StackPane>