<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.layout.*?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" maxWidth="450" styleClass="loginVB">
  <GridPane alignment="CENTER" hgap="10" vgap="10">
    <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" prefWidth="150"/>
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" prefWidth="150"/>
    </columnConstraints>
    <MFXTextField floatingText="ID Product" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="0"/>
    <MFXTextField floatingText="Name Product" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="1"/>
    <MFXTextField floatingText="Base Product" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="2"/>
    <MFXTextField floatingText="Price" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="3"/>
    <MFXComboBox floatingText="Operator" floatMode="BORDER" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="Equal"/>
          <String fx:value="More"/>
          <String fx:value="Less"/>
          <String fx:value="Equal | More"/>
          <String fx:value="Equal | Less"/>
        </FXCollections>
      </items>
    </MFXComboBox>
    <MFXTextField floatingText="Discount" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="4"/>
    <MFXComboBox floatingText="Operator" floatMode="BORDER" GridPane.columnIndex="1" GridPane.rowIndex="4">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="Equal"/>
          <String fx:value="More"/>
          <String fx:value="Less"/>
          <String fx:value="Equal | More"/>
          <String fx:value="Equal | Less"/>
        </FXCollections>
      </items>
    </MFXComboBox>
    <MFXTextField floatingText="Quantity" floatMode="BORDER" prefWidth="150" GridPane.columnIndex="0"
                  GridPane.rowIndex="5"/>
    <MFXComboBox floatingText="Operator" floatMode="BORDER" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="Equal"/>
          <String fx:value="More"/>
          <String fx:value="Less"/>
          <String fx:value="Equal | More"/>
          <String fx:value="Equal | Less"/>
        </FXCollections>
      </items>
    </MFXComboBox>
    <rowConstraints>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
    </rowConstraints>
  </GridPane>
  <HBox alignment="CENTER">
    <MFXButton buttonType="RAISED" mnemonicParsing="false" text="Submit" styleClass="Btn"/>
  </HBox>
</VBox>